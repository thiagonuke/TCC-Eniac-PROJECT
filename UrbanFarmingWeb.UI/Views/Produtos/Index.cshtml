@model List<UrbanFarming.Domain.Classes.Produtos>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #4a90e2, #1c3d70);
        margin: 0;
        color: #fff;
    }

    h1, h2 {
        font-weight: 400;
    }

    /* BOTÕES DO TOPO */
    .top-actions {
        display: flex;
        justify-content: flex-end;
        gap: 20px;
    }

    .open-cart-btn, .open-cadastro-prod {
        background: rgba(255, 255, 255, 0.25);
        border: none;
        padding: 12px;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        cursor: pointer;
        transition: 0.3s;
    }

        .open-cart-btn:hover, .open-cadastro-prod:hover {
            background: rgba(255, 255, 255, 0.4);
            transform: translateY(-3px);
        }

    /* GRID DE PRODUTOS */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    /* CARD MODERNO */
    .product-card {
        background: rgba(255, 255, 255, 0.18);
        backdrop-filter: blur(14px);
        padding: 20px;
        border-radius: 18px;
        text-align: center;
        color: #fff;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.25);
        transition: 0.3s;
        height: 60vh;
    }

    .product-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    }

    .product-card img {
        width: 100%;
        height: 150px;
        border-radius: 12px;
        object-fit: cover;
        margin-bottom: 15px;
    }

    .product-card button {
        margin-top: 10px;
        padding: 10px 15px;
        width: 100%;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        background: #28a745;
        color: white;
        font-weight: 600;
        transition: 0.25s;
    }

    .product-card button:hover {
        background: #1f8a39;
        transform: translateY(-2px);
    }

    /* ÍCONE DE EXCLUIR (ADMIN) */
    .remove-prod {
        background: #ff4d4d;
        color: white;
        padding: 3px 10px;
        border-radius: 50%;
        cursor: pointer;
        font-size: 18px;
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .product-card .remove-prod:hover {
        background: #d93636;
    }

    /* CARRINHO MODERNO */
    .cart {
        width: 350px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(25px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.25);
        border-radius: 0 0 0 20px;
        position: fixed;
        top: 0;
        right: -400px;
        height: 100vh;
        transition: 0.4s ease;
        color: white;
    }

    .cart.open {
        right: 0;
    }

    .close-cart-btn {
        background: #d9534f;
        border: none;
        color: white;
        padding: 8px 12px;
        position: absolute;
        top: 18px;
        right: 18px;
        border-radius: 50%;
        cursor: pointer;
    }

    /* LISTA ITENS */
    .cart-items {
        margin-top: 20px;
        padding: 0;
        list-style: none;
    }

    .cart-items li {
        background: rgba(255,255,255,0.15);
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 10px;
        display: flex;
        justify-content: space-between;
        backdrop-filter: blur(6px);
    }

    .checkout-btn {
        background: #28a745;
        color: #fff;
        padding: 12px;
        border-radius: 10px;
        width: 100%;
        margin-top: 20px;
        border: none;
        font-size: 16px;
        cursor: pointer;
        transition: 0.25s;
    }

        .checkout-btn:hover {
            background: #1f7a33;
            transform: translateY(-2px);
        }

    /* MODAL MODERNO */
    .modal {
        display: none;
        position: fixed;
        z-index: 4;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        backdrop-filter: blur(6px);
    }

    .modal-content {
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(12px);
        padding: 30px;
        border-radius: 20px;
        width: 85%;
        max-width: 500px;
        margin: 5% auto;
        color: white;
        box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    }

    .modal-content input,
    .modal-content textarea {
        margin-bottom: 10px;
        background: white !important;
    }

    .modal-content button {
        background: #1c3d70;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        margin-top: 12px;
    }

    .close {
        cursor: pointer;
        font-size: 28px;
    }

    @@media (max-width: 768px) {
        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));
        }
    }

    .cart-item-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .remove-cart-btn {
        width: 30px;
        height: 30px;
        border: none;
        border-radius: 50%;
        background-color: #dc3545;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: 0.2s ease;
    }

    .remove-cart-btn:hover {
        background-color: #bd2130;
        transform: scale(1.1);
    }

    .remove-cart-btn img {
        width: 16px;
        height: 16px;
        filter: brightness(0) invert(1);
    }

    .remove-product-btn {
        position: absolute;
        width: 5vw !important;
        height: 34px;
        border: none;
        border-radius: 50%;
        background-color: #dc3545;
        cursor: pointer;
        justify-content: end;
        align-items: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        transition: 0.2s ease;
        z-index: 10;
    }

    .remove-product-btn:hover {
        background-color: #b71c1c;
        transform: scale(1.1);
    }

    .remove-product-btn img {
        width: 18px;
        height: 18px;
        filter: brightness(0) invert(1);
    }
</style>

<!doctype html>
<html lang="en">
<body style="background-color: steelblue;">
    <div class="col-md-12 d-flex justify-content-end mt-4">
        <button class="open-cart-btn">
            <img width="24" height="24" src="https://img.icons8.com/material-outlined/24/shopping-cart--v1.png" alt="shopping-cart--v1" />
        </button>
        @if (ViewBag.Adm == true)
        {
            <button class="open-cadastro-prod bg-white rounded-circle ms-5">
                <img width="24" height="24" src="https://img.icons8.com/?size=100&id=1501&format=png&color=000000" alt="shopping-cart--v1" />
            </button>
        }
    </div>

    <section class="product-grid mt-1">
        @foreach (var prod in Model)
        {

            <div class="product-card d-flex flex-column justify-content-around shadow-lg">
                @if (ViewBag.Adm == true)
                {
                    <div class="row justify-content-end mb-5">
                        <button class="remove-product-btn" style="background-color: red !important;" id="removeprod">
                            <img src="https://img.icons8.com/ios-glyphs/20/ffffff/trash.png" />
                        </button>
                    </div>

                }
                <img src="@prod.LinkImagem">
                <h2>@prod.Nome</h2>
                <p>@prod.Codigo</p>
                <span>@prod.Descricao</span>
                <h4><b>R$ @prod.Valor</b></h4>
                <button>Adicionar ao Carrinho</button>
            </div>
        }
    </section>

    <aside class="cart">
        <button class="close-cart-btn">X</button>
        <h2>Carrinho</h2>
        <ul class="cart-items"></ul>
        <p>Total: <span class="total-price">R$ 0.00</span></p>
        <button class="checkout-btn" id="checkout-btn" onclick="FinalizarPedidos()">Finalizar Compra</button>
    </aside>

    <!-- Modal de Cadastro de Produto -->
    <div id="produtoModal" class="modal">
        <div class="modal-content">
            <div class="col-md-12 d-flex justify-content-between align-items-center">
                <h2>Cadastrar Produto</h2>

                <span class="close">&times;</span>
            </div>
            <hr />
            <form id="produtoForm" class="d-flex flex-column align-items-center text-white">
                <label style="color:white;" for="idFornecedor">Vincular Fornecedor:</label>
                <select id="idFornecedor" class="rounded-3 border border w-75 p-1 text-black"
                        style="background-color:white" required>
                    <option value="">Selecione...</option>
                </select>
                <label style="color:white;" class="mt-3" for="codigo">Código:</label>
                <input type="text" id="codigo" class="rounded-3 border border w-75 p-1 text-black" style="background-color:white" placeholder="codigo" required>

                <label style="color:white;" class="mt-3" for="nome">Nome:</label>
                <input type="text" id="nome" class="rounded-3 border w-75 p-1 text-black" style="background-color:white" placeholder="nome" required>

                <label style="color:white;" class="mt-3" for="valor">Valor:</label>
                <input type="number" step="0.01" id="valor" class="rounded-3 border w-75 p-1 text-black" style="background-color:white" placeholder="valor" required>

                <label style="color:white;" class="mt-3" for="descricao">Descrição:</label>
                <textarea id="descricao" class="rounded-3 border w-75 p-1 text-black" name="descricao"></textarea>

                <label style="color:white;" class="mt-3" for="linkImagem">Link da Imagem:</label>
                <input type="text" id="linkImagem" class="rounded-3 border w-75 p-1 text-black" style="background-color:white" placeholder="linkImagem" required>

                <button class="w-100 mt-3" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>

</body>

</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet">

<script>
    const cart = document.querySelector('.cart');
    const openCartBtn = document.querySelector('.open-cart-btn');
    const closeCartBtn = document.querySelector('.close-cart-btn');
    const checkoutbtn = document.querySelector('#checkout-btn');
    const removeprod = document.querySelector('.remove-product-btn');
    const cartItemsList = document.querySelector('.cart-items');
    const totalPriceElement = document.querySelector('.total-price');
    const addToCartButtons = document.querySelectorAll('.product-card button');


    let cartItems = [];
    let total = 0.0;

    openCartBtn.addEventListener('click', () => {
        cart.classList.add('open');
    });

    closeCartBtn.addEventListener('click', () => {
        cart.classList.remove('open');
    });


    checkoutbtn.addEventListener('click', () => {
        toastr.success("Compra Finalizada com sucesso!")
        cart.classList.remove('open');
    });

    try {
        debugger
        removeprod.addEventListener('click', (e) => {
            const productCard = e.target.closest('.product-card');

            const productCod = productCard.querySelector('p').textContent;

            RemoveItem(productCod)

        });

    } catch (ex) {
    }

    function RemoveItem(productCod) {
        debugger
        $.ajax({
            url: '/Produtos/Deletar',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(productCod),
            success: function (response) {
                alert('Produto deletado com Sucesso!');
                modal.style.display = "none";
                $('#produtoForm')[0].reset();
            },
            error: function (xhr, status, error) {
                alert('Erro ao deletar produto: ' + error);
            }
        });


    }


    function addToCart(itemName, itemPrice, productCod) {

        const existingItem = cartItems.find(item => item.name === itemName);

        itemPrice = Number(parseFloat(itemPrice).toFixed(2));

        if (existingItem) {
            existingItem.quantity++;
        } else {
            cartItems.push({ name: itemName, price: itemPrice, quantity: 1, Codigo: productCod });
        }

        total = parseFloat((total + itemPrice).toFixed(2));
        updateCartUI();
    }

    function removeFromCart(itemName) {
        const itemIndex = cartItems.findIndex(item => item.name === itemName);

        if (itemIndex !== -1) {
            const item = cartItems[itemIndex];
            total = parseFloat((total - item.price * item.quantity).toFixed(2));
            cartItems.splice(itemIndex, 1);
        }

        updateCartUI();
    }

    function updateCartUI() {
        cartItemsList.innerHTML = '';

        cartItems.forEach(item => {
            const li = document.createElement('li');
            li.classList.add('cart-item-row')
            li.textContent = `${item.name} (x${item.quantity}) - R$ ${(item.price * item.quantity).toFixed(2)}`;

            const removeBtn = document.createElement('button');
            removeBtn.classList.add('remove-cart-btn');
            removeBtn.innerHTML = '<img src="https://img.icons8.com/ios-glyphs/20/ffffff/trash.png"/>';

            removeBtn.addEventListener('click', () => {
                removeFromCart(item.name);
            });

            li.appendChild(removeBtn);
            cartItemsList.appendChild(li);
        });

        totalPriceElement.textContent = `R$ ${total.toFixed(2)}`;
    }

    $('#produtoForm').on('submit', function (e) {
        e.preventDefault();
        debugger
        var produtoData = {
            Codigo: $('#codigo').val(),
            Nome: $('#nome').val(),
            Valor: $('#valor').val(),
            Descricao: $('#descricao').val(),
            LinkImagem: $('#linkImagem').val(),
            Fornecedor: $('#idFornecedor').val()
        };

        $.ajax({
            url: '/Produtos/Cadastrar',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(produtoData),
            success: function (response) {
                alert('Produto cadastrado com sucesso!');
                modal.style.display = "none";
                $('#produtoForm')[0].reset();
            },
            error: function (xhr, status, error) {
                alert('Erro ao cadastrar produto: ' + error);
            }
        });
    });




    document.addEventListener('DOMContentLoaded', function () {
        var modal = document.getElementById("produtoModal");
        var btn = document.querySelector(".open-cadastro-prod");
        var span = document.querySelector(".close");

        btn.onclick = function () {
            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        const removeProdButtons = document.querySelectorAll('.remove-prod');


        removeProdButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                const productCard = e.target.closest('.product-card');
                if (!productCard) return;

                const productCod = productCard.querySelector('p').textContent;

                RemoveItem(productCod);

                productCard.remove();

                location.reload();
            });
        });

        const fornecedorSelect = document.getElementById("idFornecedor");
        debugger
        $.ajax({
                url: "/Fornecedor/GetAllFornecedores",
                method: "GET",
                dataType: "json",
                success: function (data) {
                    const fornecedorSelect = $("#idFornecedor");

                    data.forEach(f => {
                        fornecedorSelect.append(
                            $("<option>", {
                                value: f.codigo,
                                text: f.razaoSocial
                            })
                        );
                    });
                },
                error: function (err) {
                    console.error("Erro ao carregar fornecedores:", err);
                }
            });

    });

    addToCartButtons.forEach(button => {
        button.addEventListener('click', (e) => {
            const productCard = e.target.closest('.product-card');
            const productName = productCard.querySelector('h2').textContent;
            const productPrice = parseFloat(productCard.querySelector('h4 b').textContent.replace('R$', '').trim());
            const productCod = productCard.querySelector('p').textContent;

            addToCart(productName, productPrice, productCod);
        });


    });

    function FinalizarPedidos() {
        debugger

        const pedido = {
            CodigoPedido: 0,
            ValorTotal: total,
            Itens: cartItems.map(item => ({
                CodigoPedido: 0,
                NomeProduto: item.name,
                CodigoProduto: item.Codigo,
                Quantidade: item.quantity,
                ValorUnitario: item.price
            }))
        };

        $.ajax({
            url: '/Pedidos/CadastrarPedidos',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(pedido),
            success: function (response) {
                toastr.success('Pedido cadastrado com sucesso!');
                cartItems = [];
                updateCartUI();
            },
            error: function (xhr, status, error) {
                toastr.error('Erro ao finalizar pedido: ' + error);
            }
        });
    }

</script>